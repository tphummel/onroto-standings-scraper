!!! 5
html
  head
    include ../includes/head
  
  body
    include ../includes/nav

    .container
        h2 Diff
        h4 #{dateStart} -> #{dateEnd}

    .container
      form(class="form-inline", role="form")
        .form-group

          label(
            for="report-date-start"
            class="control-label sr-only"
          ) Date: 

          input(
            id="report-date-start"
            class="form-control"
            type="date", 
            placeholder="YYYY-MM-DD", 
            value=dateStart
          )

          label(
            for="report-date-end"
            class="control-label sr-only"
          ) Date: 

          input(
            id="report-date-end"
            class="form-control"
            type="date", 
            placeholder="YYYY-MM-DD", 
            value=dateEnd
          )

          button(
            type="button"
            class="btn btn-default diff"
          ) Run

        .form-group
          label.radio
            input(type="radio" id="ranks")
            | Ranks

          label.radio
            input(type="radio" id="points")
            | Points



    .container
      if standings.length == 0
        h1 No Standings for this date
      else
        table.table.table-striped.table-bordered.table-hover.table-condensed.sortable
          thead
            tr
              th Rank
              th Team
              th Points
              each key in categories
                each mode in ["stat", "points"]
                  th(class=mode) #{key}

          tbody
            each tm in standings
              tr 
                - var rk = tm.total.stat
                td(class=(rk < 0 ? "danger" : (rk > 0 ? "success" : "") )) #{rk}
                td #{tm.team}
                - var pts = tm.total.points
                td(class=(pts < 0 ? "danger" : (pts > 0 ? "success" : "") )) #{pts}

                each key in categories
                  each mode in ["stat", "points"]
                    - var val = tm[key][mode]

                    td(class="#{mode} "+(val < 0 ? "danger" : (val > 0 ? "success" : "") )) #{val}

        
    include ../includes/foot